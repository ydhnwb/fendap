<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#FF5F5F"
    android:id="@+id/root_list_item_about"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/about_photo"
            android:src="@drawable/ydhnwb" />
        <TextView
            android:id="@+id/about_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_marginTop="8dp"
            android:text="Prieyudha Akadita S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/about_email"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:text="yudhanewbie@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>